@model List<mypharmacy.Models.consumer>
@{
    ViewBag.Title = "Consumer";
    if (Session["Role"] == "user")
    {
        Layout = "~/Views/Shared/_Pharmacylayout.cshtml";
    }
    else if (Session["Role"] == "admin")
    {
        Layout = "~/Views/Shared/_AdminPharmacylayout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_Pharmacylayout.cshtml";

    }
}

<!-- banner -->
<div class="page-head">
    <div class="container">
        <h3>Consumer</h3>
    </div>
</div>
<!-- //banner -->
<!-- Electronics -->
<div class="electronics">
    <div class="container">
        <div class="col-md-8 electro-left text-center">
            <div class="electro-img-left mask">
                <div class="content-grid-effect slow-zoom vertical">
                    <div class="img-box"><img src="~/Images/ch1.jpg" alt="image" class="img-responsive zoom-img"></div>
                    <div class="info-box">
                        <div class="info-content electro-text simpleCart_shelfItem">
                            <h4>Branded Watches</h4>
                            <span class="separator"></span>
                            <p><span class="item_price">$500</span></p>
                            <span class="separator"></span>
                            <a class="item_add hvr-outline-out button2" href="#">add to cart </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="electro-img-btm-left mask">
                <div class="content-grid-effect slow-zoom vertical">
                    <div class="img-box"><img src="~/Images/ch2.jpg" alt="image" class="img-responsive zoom-img"></div>
                    <div class="info-box">
                        <div class="info-content electro-text simpleCart_shelfItem">
                            <h4>Mobiles</h4>
                            <span class="separator"></span>
                            <p><span class="item_price">$500</span></p>
                            <span class="separator"></span>
                            <a class="item_add hvr-outline-out button2" href="#">add to cart </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="electro-img-btm-right mask">
                <div class="content-grid-effect slow-zoom vertical">
                    <div class="img-box"><img src="~/Images/ch3.jpg" alt="image" class="img-responsive zoom-img"></div>
                    <div class="info-box">
                        <div class="info-content electro-text simpleCart_shelfItem">
                            <h4>Branded Watches</h4>
                            <span class="separator"></span>
                            <p><span class="item_price">$500</span></p>
                            <span class="separator"></span>
                            <a class="item_add hvr-outline-out button2" href="#">add to cart </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="col-md-4 electro-right text-center">
            <div class="electro-img-rt mask">
                <div class="content-grid-effect slow-zoom vertical">
                    <div class="img-box"><img src="~/Images/ch4.jpg" alt="image" class="img-responsive zoom-img"></div>
                    <div class="info-box">
                        <div class="info-content electro-text simpleCart_shelfItem">
                            <h4>Mobiles</h4>
                            <span class="separator"></span>
                            <p><span class="item_price">$500</span></p>
                            <span class="separator"></span>
                            <a class="item_add hvr-outline-out button2" href="#">add to cart </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="ele-bottom-grid">
            <h3><span>Latest </span>Collections</h3>
            <p>
                We endeavors to be a one-stop solution for consumers.
                We understand that when you are looking for convenience, you deserve to receive it.
            </p>
            @for (int i = 0; i < 12; i++)
            {
                <div class="col-md-3 product-men yes-marg">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="~/UplodedImages/@Model[i].consumerimage" alt="" class="pro-image-front">
                            <img src="~/UplodedImages/@Model[i].consumerimage" alt="" class="pro-image-back">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="~/Single/QuickView/@Model[i].pid" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>
                            <span class="product-new-top">New</span>

                        </div>
                        <div class="item-info-product ">
                            <h4><a href="single.html">@Model[i].consumername </a></h4>
                            <div class="info-product-price">
                                <span class="item_price">@Model[i].consumerprice</span>
                                <del>$120.71</del>
                            </div>
                            <a href="~/Checkout/getCart/@Model[i].pid" class="item_add single-item hvr-outline-out button2">Add to cart</a>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- //Electronics -->
<!-- //product-nav -->

