
@{
    ViewBag.Title = "AddMedicine";
    Layout = "~/Views/Shared/_AdminPharmacylayout.cshtml";
}
@Html.Raw(TempData["msg"]);

<div class="container">
                                       <h2 class="heading">Add Your New Product</h2>
    <form class="form-horizontal" method="post" action="~/Medicine/Save" enctype="multipart/form-data">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="" name="medicinename">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Price:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pwd" placeholder="" name="medicineprice">
            </div>
        </div>
        

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Cetegory:</label>
            <div class="col-sm-10">
                <select name="ctgry" class="form-control" id="pwd">
                    <option value="medicine">Medicine</option>
                    <option value="surgical">Surgical</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="consumer">Consumer</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Image:</label>
            <div class="col-sm-10">
                <input type="file"  name="medicineprice">
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
<style>
    .heading
    {
        margin-top: 30px;
        margin-left:370px;
    }
