
@{
    ViewBag.Title = "Reset Password";
    if (Session["Role"] == "user")
    {
        Layout = "~/Views/Shared/_Pharmacylayout.cshtml";
    }
    else if (Session["Role"] == "admin")
    {
        Layout = "~/Views/Shared/_AdminPharmacylayout.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_Pharmacylayout.cshtml";

    }
}
<div class="container">



                                                                                                               <h2 class="heading">Get Your Password</h2>
    <form class="form-horizontal" method="post" action="Email">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="" name="remail">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Send</button>
            </div>
        </div>
    </form>
 </div>
   